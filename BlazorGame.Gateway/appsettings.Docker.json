{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "coreGameSessionsRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/GameSessions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/GameSessions/{**catch-all}"
          }
        ]
      },
      "coreGameRewardsRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/GameRewards/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/GameRewards/{**catch-all}"
          }
        ]
      },
      "coreRoomTemplatesRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/RoomTemplates/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/RoomTemplates/{**catch-all}"
          }
        ]
      },
      "authApiRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "blazorRoute": {
        "ClusterId": "blazorCluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "coreCluster": {
        "Destinations": {
          "coreService": {
            "Address": "http://core-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      },
      "authCluster": {
        "Destinations": {
          "authService": {
            "Address": "http://auth-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      },
      "blazorCluster": {
        "Destinations": {
          "blazorApp": {
            "Address": "http://client"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      }
    }
  }
}
