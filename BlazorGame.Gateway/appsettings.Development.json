{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "coreGameSessionsRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/GameSessions/{**catch-all}"
        }
      },
      "coreGameRewardsRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/GameRewards/{**catch-all}"
        }
      },
      "coreRoomTemplatesRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/RoomTemplates/{**catch-all}"
        }
      },
      "authApiRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "blazorRoute": {
        "ClusterId": "blazorCluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "coreCluster": {
        "Destinations": {
          "coreService": {
            "Address": "http://localhost:5051"
          }
        }
      },
      "authCluster": {
        "Destinations": {
          "authService": {
            "Address": "http://localhost:5049"
          }
        }
      },
      "blazorCluster": {
        "Destinations": {
          "blazorApp": {
            "Address": "http://localhost:5050"
          }
        }
      }
    }
  }
}
