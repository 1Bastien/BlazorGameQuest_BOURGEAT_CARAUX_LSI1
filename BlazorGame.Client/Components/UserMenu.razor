@inherits ComponentBase
@implements IAsyncDisposable
@inject IJSRuntime JSRuntime
@inject AuthService AuthService
@inject NavigationManager Navigation

@* Composant UserMenu pour le menu utilisateur *@

<div class="user-menu relative" @ref="_menuElement" @onclick:stopPropagation>
    <button @onclick="ToggleUserMenu" class="hover:opacity-100">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
        </svg>
    </button>
    
    @if (_isUserMenuOpen)
    {
        <div class="py-2 user-menu-dropdown">
            @if (_isAuthenticated)
            {
                <a href="/new-adventure" @onclick="CloseUserMenu" class="block px-4 py-2 text-white hover:bg-white/10">
                    Jouer
                </a>
                <a href="/history" @onclick="CloseUserMenu" class="block px-4 py-2 text-white hover:bg-white/10">
                    Mon Historique
                </a>
                @if (_isAdmin)
                {
                    <a href="/admin-dashboard" @onclick="CloseUserMenu" class="block px-4 py-2 text-white hover:bg-white/10">
                        Administration
                    </a>
                }
                <button @onclick="HandleLogout" class="block w-full text-left px-4 py-2 text-white hover:bg-white/10">
                    DÃ©connexion
                </button>
            }
            else
            {
                <a href="/login" @onclick="CloseUserMenu" class="block px-4 py-2 text-white hover:bg-white/10">
                    Se connecter
                </a>
            }
        </div>
    }
</div>

@code {
    private bool _isUserMenuOpen;
    private bool _isAuthenticated;
    private bool _isAdmin;
    private ElementReference _menuElement;
    private IJSObjectReference? _jsModule;
    private DotNetObjectReference<UserMenu>? _objRef;

    protected override async Task OnInitializedAsync()
    {
        await UpdateAuthState();
    }

    private async Task UpdateAuthState()
    {
        _isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (_isAuthenticated)
        {
            _isAdmin = await AuthService.IsAdminAsync();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _objRef = DotNetObjectReference.Create(this);
            _jsModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./js/userMenu.js");
        }

        if (_isUserMenuOpen && _jsModule != null && _objRef != null)
        {
            await _jsModule.InvokeVoidAsync("setupClickOutside", _menuElement, _objRef);
        }
        else if (!_isUserMenuOpen && _jsModule != null)
        {
            await _jsModule.InvokeVoidAsync("removeClickOutside");
        }
    }

    private void ToggleUserMenu()
    {
        _isUserMenuOpen = !_isUserMenuOpen;
    }

    [JSInvokable]
    public void CloseUserMenu()
    {
        _isUserMenuOpen = false;
        StateHasChanged();
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        CloseUserMenu();
        Navigation.NavigateTo("/", true);
    }

    public async ValueTask DisposeAsync()
    {
        if (_jsModule != null)
        {
            await _jsModule.InvokeVoidAsync("removeClickOutside");
            await _jsModule.DisposeAsync();
        }
        _objRef?.Dispose();
    }
}
