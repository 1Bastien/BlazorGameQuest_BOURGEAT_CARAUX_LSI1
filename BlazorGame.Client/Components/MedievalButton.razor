@namespace BlazorGame.Client.Components

@* Composant de bouton avec style médiéval *@

<button @onclick="OnClick" 
        class="@GetButtonClasses()" 
        disabled="@Disabled">
    @Text
</button>

@code {
    [Parameter, EditorRequired]
    public string Text { get; set; } = "";

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public bool IsLarge { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    private string GetButtonClasses()
    {
        var baseClasses = "btn-primary transform hover:scale-[1.05] transition-transform duration-300";
        var sizeClasses = IsLarge ? "text-xl px-12 py-4" : "text-lg px-8 py-3";
        return $"{baseClasses} {sizeClasses}";
    }
}
