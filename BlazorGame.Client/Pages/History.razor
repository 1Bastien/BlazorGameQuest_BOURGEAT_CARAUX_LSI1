@page "/history"

@* Page d'historique des aventures de l'utilisateur *@

<PageTitle>Historique</PageTitle>

<div class="min-h-screen bg-medieval-dark/50 py-12">
    <div class="container mx-auto px-4 max-w-6xl flex flex-col gap-12">
        <div class="card text-center p-12 transform hover:scale-[1.02] transition-transform duration-300">
            <div class="flex justify-center items-center gap-4 mb-4">
                <div class="h-1 flex-1 bg-medieval-accent/30"></div>
                <h1 class="history-title font-medieval">Historique des Aventures</h1>
                <div class="h-1 flex-1 bg-medieval-accent/30"></div>
            </div>
            <p class="text-medieval-light opacity-80 text-xl font-medieval">Revivez vos exploits passés</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="card p-8 transform hover:scale-[1.01] transition-transform duration-300">
                <h3 class="text-xl mb-2 font-medieval text-medieval-accent">Parties jouées</h3>
                <p class="text-3xl font-bold font-medieval">-</p>
            </div>
            <div class="card p-8 transform hover:scale-[1.01] transition-transform duration-300">
                <h3 class="text-xl mb-2 font-medieval text-medieval-accent">Score total</h3>
                <p class="text-3xl font-bold font-medieval">-</p>
            </div>
            <div class="card p-8 transform hover:scale-[1.01] transition-transform duration-300">
                <h3 class="text-xl mb-2 font-medieval text-medieval-accent">Victoires</h3>
                <p class="text-3xl font-bold font-medieval">-</p>
            </div>
            <div class="card p-8 transform hover:scale-[1.01] transition-transform duration-300">
                <h3 class="text-xl mb-2 font-medieval text-medieval-accent">Défaites</h3>
                <p class="text-3xl font-bold font-medieval">-</p>
            </div>
        </div>

        <div class="card overflow-hidden p-8 transform hover:scale-[1.01] transition-transform duration-300">
            <h2 class="text-2xl mb-6 font-medieval text-medieval-accent text-center">Dernières aventures</h2>
            <div class="text-center text-medieval-light italic font-medieval">
                Aucune aventure à afficher pour le moment
            </div>
        </div>
    </div>
</div>
